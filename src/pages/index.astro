---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
---

<Layout>
  <Header />

  <main
      id="main-content"
      data-layout="index"
      class="relative min-h-screen flex items-center justify-center text-[var(--color-foreground)] overflow-hidden"
  >
    <!-- 视频背景 -->
    <video
        autoplay
        muted
        loop
        playsinline
        class="absolute top-0 left-0 w-full h-full object-cover z-0"
    >
      <source src="/videos/bg.webm" type="video/webm" />
      Your browser does not support the video tag.
    </video>

    <!-- 遮罩（可选） -->
    <div class="absolute inset-0 bg-black/50 z-10"></div>

    <!-- 页面内容 -->
    <section class="relative z-20 w-full max-w-6xl px-4 sm:px-6 lg:px-8 py-20 grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <!-- 左侧内容 -->
      <div class="order-2 md:order-1 bg-[var(--color-background)]/60 backdrop-blur-sm p-6 rounded-lg shadow-lg">
        <h1 class="text-4xl sm:text-5xl font-bold mb-6 text-[var(--color-foreground)]">Hello I'm Jack</h1>
        <p class="text-lg text-gray-300 mb-6">
          I'm a software developer and content creator based in China.<br />
          I love AI, Cybersecurity, and E-commerce innovation.
        </p>
        <!-- SVG 图标 -->
        <div class="flex gap-4">
          <!-- 图标区域保留 -->
        </div>
      </div>

      <!-- 右侧头像 -->
      <div class="order-1 md:order-2 flex justify-center">
        <div class="w-52 h-52 rounded-full border-4 border-dotted border-yellow-400 overflow-hidden transform transition duration-500 hover:scale-105 hover:rotate-2">
          <img src="/images/avatar.jpg" alt="avatar" class="w-full h-full object-cover rounded-full" />
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>


